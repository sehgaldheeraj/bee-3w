<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css"></link>
    <title>Document</title>
  </head>
  <body>
    <h1>E-Shopping</h1>
    <a href="/v1/products/new">Add New Product</a>
    <div class="productsContainer">
      <% products.forEach(product => { %>
      <div>
        <h3><%= product.name%></h3>
        <p><%= product.desc%></p>
        <p><%= product.price%></p>
        <p><%= product.quantity%></p>
        <p><%= product.category%></p>
        <a href="/v1/products/<%= product.id %>">View Product</a>
      </div>
      <% }) %>
    </div>
  </body>
</html>
